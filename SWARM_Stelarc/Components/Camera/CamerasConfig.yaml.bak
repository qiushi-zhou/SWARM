cameras:
  - id: 0
    name: "Camera1"
    enabled: True
    anchor: topLeft # top, bottom, left, right
    unit: ratio # ratio (between 0 and 1), or px for absolute positioning
    origin: { x: 0, y: 0}
    text_position: { x: 0, y: 0}
    shape: square
    padding: 1 # Between 0 and 1
    color: [0, 0, 255]
    path: # point in px or use height/width (also h and w)
      - { x: 0, y: h*0.5}
      - { x: 0, y: h*0.34}
      - { x: 260, y: h*0.19}
      - { x: w*0.5, y: h*0.28}
      - { x: w*0.5, y: h*0.5}
  - id: 1
    name: "Camera2"
    enabled: True
    anchor: topRight # top, bottom, left, right
    unit: ratio # ratio (between 0 and 1), or px for absolute positioning
    origin: { x: 0, y: 0}
    text_position: { x: w*0.5, y: 0}
    shape: square
    padding: 1 # Between 0 and 1
    color: [0, 255, 0]
    path: # point in px or use height/width (also h and w)
      - { x: w*0.5, y: 0}
      - { x: w*0.5, y: h*0.5}
      - { x: w*1.0, y: h*0.5}
      - { x: w*1.0, y: 0}
  - id: 2
    enabled: True
    anchor: bottomLeft # top, bottom, left, right, center
    unit: ratio # ratio (between 0 and 1), or px for absolute positioning
    origin: { x: 0, y: 0}
    text_position: { x: 0, y: h*0.5}
    shape: square
    padding: 1 # Between 0 and 1
    color: [255, 0, 0]
    path: # point in px or use height/width (also h and w)
      - { x: 0, y: h*1}
      - { x: 0, y: h*0.73}
      - { x: w*0.38, y: h*0.69}
      - { x: w*0.5, y: h*0.82}
      - { x: w*0.5, y: h*1}
  - id: 3
    enabled: False
    anchor: bottomRight # top, bottom, left, right
    unit: ratio # ratio (between 0 and 1), or px for absolute positioning
    origin: { x: w*0.3, y: 0}
    text_position: { x: w*0.5, y: 0}
    shape: square
    padding: 1 # Between 0 and 1
    color: [255, 0, 255]
    path: # point in px or use height/width (also h and w)
      - { x: 0, y: h*1}
      - { x: 0, y: h*0.73}
      - { x: w*0.38, y: h*0.69}
      - { x: w*0.5, y: h*0.82}
      - { x: w*0.5, y: h*1}